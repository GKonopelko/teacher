---
import Header from '../components/ui/Header.astro';
import Footer from '../components/ui/Footer.astro';
import favicon from '@assets/images/parrotsvg.svg';
import '../styles/global.css';
import Analytics from '../components/analytics/Analytics.astro';
import ScrollAnimations from '../components/scripts/ScrollAnimations.astro';

export interface Props {
  title: string;
  description: string;
  canonicalUrl?: string;
  structuredData?: object;
  faqData?: Array<{ question: string; answer: string }>;
}

const { title, description, canonicalUrl, structuredData, faqData = [] } = Astro.props;
const siteUrl = 'https://grigori.konopelko.com';
const fullCanonicalUrl = canonicalUrl || siteUrl + Astro.url.pathname;
const fullOgImage = siteUrl + '/images/grigori.webp';

const jsonLdString = JSON.stringify(
  structuredData || {
    '@context': 'https://schema.org',
    '@type': 'ProfessionalService',
    name: 'Репетитор финского языка - Григорий Конопелько',
    description: description,
    url: siteUrl,
    telephone: '+7-911-777-02-97',
    email: 'grigori.konopelko@mail.ru',
    address: {
      '@type': 'PostalAddress',
      addressCountry: 'RU',
      addressLocality: 'Санкт-Петербург',
    },
    areaServed: ['Россия', 'Финляндия'],
    serviceType: 'Языковые курсы',
    provider: {
      '@type': 'Person',
      name: 'Григорий Конопелько',
      jobTitle: 'Репетитор финского языка',
      experienceYears: '15',
    },
  }
);

const faqStructuredData =
  faqData.length > 0
    ? {
        '@context': 'https://schema.org',
        '@type': 'FAQPage',
        mainEntity: faqData.map((q) => ({
          '@type': 'Question',
          name: q.question,
          acceptedAnswer: {
            '@type': 'Answer',
            text: q.answer.replace(/<[^>]*>/g, ''),
          },
        })),
      }
    : null;
---

<!doctype html>
<html lang="ru">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={fullCanonicalUrl} />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={fullCanonicalUrl} />
    <meta property="og:image" content={fullOgImage} />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Репетитор финского языка - Григорий Конопелько" />
    <meta property="og:locale" content="ru_RU" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={fullOgImage} />

    <!-- Предварительное подключение для ускорения -->
    <link rel="preconnect" href="https://grigori.konopelko.com" />
    <link rel="dns-prefetch" href="https://grigori.konopelko.com" />

    <!-- Аналитика загружается как обычно -->
    <Analytics />

    <meta name="yandex-verification" content="7cd2bf4f92125340" />
    <link rel="icon" href={favicon.src} type="image/svg+xml" />

    <!-- Предзагрузка главного изображения -->
    <link rel="preload" as="image" href="/images/grigori.webp" fetchpriority="high" />

    <!-- Структурированные данные -->
    <script is:inline type="application/ld+json" set:html={jsonLdString} />

    {
      faqStructuredData && (
        <script is:inline type="application/ld+json" set:html={JSON.stringify(faqStructuredData)} />
      )
    }

    <!-- Критический CSS для ускорения первоначальной отрисовки -->
    <style>
      /* Критические стили layout */
      .body-wrapper {
        background: var(--background-white);
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        margin: 0 auto;
        padding: 0 2rem;
        width: 100%;
        max-width: 75rem;
      }

      .main-container {
        flex: 1;
        display: flex;
        flex-direction: column;
        width: 100%;
        gap: 1rem;
      }

      /* Обеспечиваем видимость критического контента */
      .hero h1 {
        opacity: 1;
        font-family: var(--font-heading);
        font-size: var(--heading-1);
        font-weight: 700;
      }

      .teacher-photo {
        opacity: 1;
        border-radius: 50%;
        object-fit: cover;
        /* Фиксируем размеры для предотвращения CLS */
        width: 400px;
        height: 400px;
      }

      /* Базовые стили заголовков */
      h1,
      h2,
      h3 {
        font-family: var(--font-heading);
        color: var(--text-primary);
        font-weight: 600;
        line-height: 1.3;
        text-align: center;
        margin: 0.5em 0;
      }

      /* Адаптивность */
      @media (max-width: 48rem) {
        .body-wrapper {
          padding: 0 1rem;
        }
        .main-container {
          gap: 0.5rem;
        }
        .teacher-photo {
          width: 300px;
          height: 300px;
        }
      }

      @media (max-width: 26.875rem) {
        .body-wrapper {
          padding: 0 0.5rem;
        }
      }

      @media (max-width: 23.4375rem) {
        .body-wrapper {
          padding: 0 0.25rem;
        }
        .teacher-photo {
          width: 250px;
          height: 250px;
        }
      }
    </style>

    <!-- Отложенная загрузка основного CSS -->
    <link
      rel="preload"
      href="/_astro/about.DtA7KAfS.css"
      as="style"
      onload="this.onload=null;this.rel='stylesheet'"
    />
    <noscript><link rel="stylesheet" href="/_astro/about.DtA7KAfS.css" /></noscript>
  </head>
  <body>
    <div class="body-wrapper">
      <Header />
      <main class="main-container">
        <slot />
      </main>
      <Footer />
    </div>
    <ScrollAnimations />
  </body>
</html>
