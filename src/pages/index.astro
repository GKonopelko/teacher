</BaseLayout>

<style>
  .hero {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    align-items: center;
    padding: 4rem 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .hero-content h1 {
    color: var(--text-primary);
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 1.5rem;
  }

  .promo h3 {
    font-size: 1.25rem;
    color: var(--text-primary);
    margin-bottom: 2rem;
    line-height: 1.6;
    font-weight: 500;
    opacity: 0.95;
  }

  .hero-buttons {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .hero-image {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
  }

  .hero-illustration {
    background: var(--accent-soft);
    border-radius: var(--border-radius-lg);
    width: 100%;
    max-width: 300px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 2px solid var(--accent-light);
  }

  .hero-photo {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    border-radius: var(--border-radius-lg);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .content-section {
    padding: 4rem 2rem;
  }

  .bg-light {
    background: var(--background-light);
  }

  .content-section h2 {
    font-family: var(--font-heading);
    font-size: 2rem;
    color: var(--text-primary);
    margin-bottom: 2rem;
    font-weight: 700;
  }

  .text-content {
    font-size: 1.1rem;
    line-height: 1.7;
    color: var(--text-primary);
    opacity: 0.9;
  }

  .text-content p {
    margin-bottom: 0.75rem;
  }

  .text-content strong {
    color: var(--text-primary);
    font-weight: 600;
  }

  .cta-section {
    background: var(--link-color);
    color: var(--background-white);
    padding: 4rem 2rem;
  }

  .cta-section h2 {
    color: var(--background-white);
    margin-bottom: 2rem;
    font-size: 2rem;
    font-weight: 600;
  }

  @media (max-width: 768px) {
    .hero {
      grid-template-columns: 1fr;
      text-align: center;
      padding: 2rem 1rem;
      gap: 2rem;
    }

    .hero-content h1 {
      font-size: 2rem;
    }

    .promo h3 {
      font-size: 1.1rem;
    }

    .hero-buttons {
      justify-content: center;
    }

    .hero-illustration {
      max-width: 200px;
    }

    .content-section {
      padding: 2rem 1rem;
    }

    .content-section h2 {
      font-size: 1.75rem;
    }

    .hero-buttons {
      flex-direction: column;
      align-items: center;
    }

    .hero-buttons > * {
      width: 100%;
      max-width: 300px;
    }
  }
</style>
