<style>
  .about-section {
    padding: 4rem 2rem;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .about-section h1 {
    font-family: var(--font-heading);
    font-size: 2.5rem;
    color: var(--link-color);
    margin-bottom: 3rem;
    text-align: center;
  }

  .about-content {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 3rem;
    align-items: start;
  }

  .about-text h2 {
    font-family: var(--font-heading);
    font-size: 1.75rem;
    color: var(--text-primary);
    margin: 2rem 0 1rem;
  }

  .promo h3 {
    font-size: 1.25rem;
    color: var(--text-secondary);
    line-height: 1.6;
    margin-bottom: 2rem;
    padding: 1.5rem;
    background: var(--background-light);
    border-radius: var(--border-radius);
    border-left: 4px solid var(--link-color);
  }

  .text-content {
    font-size: 1.1rem;
    line-height: 1.7;
    color: var(--text-secondary);
  }

  .text-content ul {
    padding-left: 1.5rem;
  }

  .text-content li {
    margin-bottom: 0.5rem;
  }

  .motivation {
    margin-top: 3rem;
    padding: 2rem;
    background: var(--accent-soft);
    border-radius: var(--border-radius);
    text-align: center;
  }

  .center {
    text-align: center;
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--link-color);
    margin: 0;
  }

  .contact-card {
    background: var(--background-white);
    border: 1px solid var(--border-light);
    border-radius: var(--border-radius-lg);
    padding: 2rem;
    box-shadow: var(--shadow);
    position: sticky;
    top: 2rem;
  }

  .contact-card h3 {
    margin-top: 0;
    margin-bottom: 1.5rem;
    color: var(--text-primary);
    font-size: 1.25rem;
  }

  .contact-card p {
    margin-bottom: 1.5rem;
    line-height: 1.5;
  }

  .contact-card a {
    color: var(--link-color);
    text-decoration: none;
  }

  .cta-button {
    display: block;
    background: var(--link-color);
    color: var(--background-white);
    text-align: center;
    padding: 1rem 2rem;
    border-radius: var(--border-radius);
    text-decoration: none;
    font-weight: 600;
    transition: var(--transition);
    margin-top: 1rem;
  }

  .cta-button:hover {
    background: var(--hover-bg);
    transform: translateY(-2px);
  }

  @media (max-width: 768px) {
    .about-section {
      padding: 2rem 1rem;
    }

    .about-section h1 {
      font-size: 2rem;
    }

    .about-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .contact-card {
      position: static;
    }
  }
</style>
