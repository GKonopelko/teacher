    font-size: 2.5rem;
    color: var(--link-color);
    margin-bottom: 3rem;
    text-align: center;
  }

  .contact-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: start;
  }

  .contact-info h2 {
    font-family: var(--font-heading);
    font-size: 1.75rem;
    color: var(--text-primary);
    margin-bottom: 2rem;
  }

  .contact-methods {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .contact-method h3 {
    font-size: 1.25rem;
    color: var(--text-primary);
    margin-bottom: 0.5rem;
  }

  .contact-link {
    display: block;
    font-size: 1.1rem;
    color: var(--link-color);
    text-decoration: none;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  .contact-link:hover {
    text-decoration: underline;
  }

  .contact-method p {
    color: var(--text-secondary);
    margin: 0;
    line-height: 1.5;
  }

  .lesson-info {
    background: var(--background-light);
    padding: 1.5rem;
    border-radius: var(--border-radius);
    border-left: 4px solid var(--link-color);
  }

  .lesson-info h3 {
    margin-top: 0;
    margin-bottom: 1rem;
    color: var(--text-primary);
  }

  .lesson-info ul {
    padding-left: 1.5rem;
    color: var(--text-secondary);
    line-height: 1.6;
  }

  .lesson-info li {
    margin-bottom: 0.5rem;
  }

  .contact-form {
    background: var(--background-white);
    border: 1px solid var(--border-light);
    border-radius: var(--border-radius-lg);
    padding: 2rem;
    box-shadow: var(--shadow);
  }

  .contact-form h2 {
    font-family: var(--font-heading);
    font-size: 1.75rem;
    color: var(--text-primary);
    margin-bottom: 2rem;
    margin-top: 0;
  }

  .form-group {
    margin-bottom: 1.5rem;
  }

  .form-group label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 600;
    color: var(--text-primary);
  }

  .form-group input,
  .form-group textarea {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid var(--border-light);
    border-radius: var(--border-radius);
    font-family: inherit;
    font-size: 1rem;
    transition: var(--transition);
  }

  .form-group input:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--link-color);
    box-shadow: 0 0 0 3px var(--accent-soft);
  }

  @media (max-width: 768px) {
    .contact-section {
      padding: 2rem 1rem;
    }

    .contact-section h1 {
      font-size: 2rem;
    }

    .contact-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .contact-form {
      padding: 1.5rem;
    }
  }
</style>
