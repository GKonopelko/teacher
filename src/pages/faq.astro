---
import BaseLayout from '../layouts/BaseLayout.astro';
import Section from '../components/ui/Section.astro';

import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';

function parseQuestions(markdownContent: string) {
  const questions: Array<{ question: string; answer: string }> = [];
  const sections = markdownContent.split('## ').slice(1);

  for (const section of sections) {
    const lines = section.split('\n');
    const question = lines[0].trim();
    const answer = lines.slice(1).join('\n').trim();

    if (question && answer) {
      questions.push({ question, answer });
    }
  }

  return questions;
}

const faqCategories = await getCollection('faq');
const sortedCategories = faqCategories.sort(
  (a: CollectionEntry<'faq'>, b: CollectionEntry<'faq'>) => a.data.order - b.data.order
);

const categoriesWithQuestions = sortedCategories.map((category) => ({
  ...category,
  questions: parseQuestions(category.body),
}));

const pageTitle = 'Частые вопросы по изучению финского языка | Репетитор Григорий Конопелько';
const pageDescription =
  'Ответы на частые вопросы: подготовка к YKI, стоимость занятий, обучение с нуля, методика преподавания финского языка';
const canonicalUrl = 'https://grigori.konopelko.com/faq/';
---

<BaseLayout
  title={pageTitle}
  description={pageDescription}
  canonicalUrl={canonicalUrl}
  faqData={categoriesWithQuestions.flatMap((cat) => cat.questions)}
>
  <Section>
    <div class="faq-header">
      <h1>Ответы на часто задаваемые вопросы по изучению финского языка</h1>
    </div>
  </Section>
  {
    categoriesWithQuestions.map((category, index) => (
      <Section background={index % 2 === 0 ? 'white' : 'light'} class="faq-category">
        <h2>{category.data.title}</h2>
        <div class="faq-items">
          {category.questions.map((item) => (
            <details class="faq-item">
              <summary class="faq-question">
                <span class="faq-question-text">{item.question}</span>
                <span class="faq-icon">+</span>
              </summary>
              <div class="faq-answer">
                <div set:html={item.answer} />
              </div>
            </details>
          ))}
        </div>
      </Section>
    ))
  }

  <Section>
    <h2>Остались вопросы?</h2>
    <p>Напишите или позвоните мне - с радостью отвечу и помогу с выбором программы обучения!</p>
  </Section>
</BaseLayout>

<style>
  .faq-header {
    text-align: center;
    margin-bottom: 0;
  }

  .category-description {
    color: var(--text-primary);
    opacity: 0.8;
    margin-bottom: 1.5rem;
  }

  .faq-items {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .faq-item {
    border: 1px solid var(--border-light);
    border-radius: var(--border-radius);
    background: var(--background-white);
    transition: var(--transition);
  }

  .faq-question {
    display: flex;
    justify-content: between;
    align-items: center;
    padding: 1.25rem;
    cursor: pointer;
    list-style: none;
    font-weight: 600;
    transition: var(--transition);
    position: relative;
  }

  .faq-question::-webkit-details-marker {
    display: none;
  }

  .faq-question-text {
    flex: 1;
    margin-right: 1rem;
  }

  .faq-icon {
    font-size: 1.5rem;
    font-weight: 300;
    transition: var(--transition);
    flex-shrink: 0;
    width: 1.5rem;
    text-align: center;
  }

  .faq-answer {
    padding: 0 1.25rem;
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease;
  }

  .faq-item[open] .faq-answer {
    max-height: 1000px;
    padding-bottom: 1.25rem;
  }

  .faq-item[open] .faq-icon {
    transform: rotate(45deg);
  }

  .faq-question:hover {
    background: var(--hover-bg);
    color: var(--text-primary);
    border-radius: var(--border-radius);
  }

  .faq-item[open] .faq-question {
    background: var(--accent-soft);
    border-bottom: 1px solid var(--accent-light);
    border-radius: var(--border-radius) var(--border-radius) 0 0;
  }

  /* Адаптивность */
  @media (max-width: 768px) {
    .faq-question {
      padding: 1rem;
    }

    .faq-answer {
      padding: 0 1rem;
    }

    .faq-item[open] .faq-answer {
      padding-bottom: 1rem;
    }
  }
</style>
