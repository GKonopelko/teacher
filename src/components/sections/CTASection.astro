---
import Button from '../ui/Button.astro';
import Icon from '../ui/Icon.astro';

export interface Props {
  badgeText?: string;
  title?: string;
  subtitle?: string;
  buttonText?: string;
  buttonHref?: string;
}

const {
  badgeText = 'Идет набор новых учеников',
  title = 'Готовы начать обучение?',
  subtitle = 'Свяжитесь со мной для консультации и пробного урока',
  buttonText = 'Записаться на пробный урок',
  buttonHref = '/contact/',
} = Astro.props;
---

<section class="cta-section">
  {badgeText && <div class="cta-badge">{badgeText}</div>}
  <h2>{title}</h2>
  {subtitle && <p>{subtitle}</p>}
  <div class="cta-buttons">
    <Button href={buttonHref} variant="primary" size="large">
      <Icon name="calendar" size="sm" />
      {buttonText}
    </Button>
  </div>
</section>

<style>
  .cta-section {
    background: linear-gradient(135deg, var(--link-color), #4da6ff);
    color: var(--background-white);
    padding: 4rem 0;
    text-align: center;
    width: 100%;
    box-sizing: border-box;
    border-radius: var(--border-radius-lg);
  }

  .cta-badge {
    background: #ff4444;
    color: white;
    padding: 0.5rem 1.5rem;
    border-radius: 2rem;
    display: inline-block;
    margin-bottom: 1rem;
    font-weight: 600;
    font-size: var(--text-sm);
  }

  .cta-section h2 {
    margin-bottom: 1rem;
  }

  .cta-buttons {
    margin-top: 2rem;
  }

  @media (max-width: 768px) {
    .cta-section {
      padding: 2rem 0;
    }
  }

  @media (max-width: 480px) {
    .cta-section {
      padding: 1.5rem 0;
    }

    .cta-badge {
      padding: 0.4rem 1rem;
      font-size: 0.8rem;
    }
  }
</style>
