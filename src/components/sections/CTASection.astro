---
import Button from '../ui/Button.astro';

export interface Props {
  badgeText?: string;
  title?: string;
  subtitle?: string;
  buttonText?: string;
  buttonHref?: string;
}

const {
  badgeText = '–ò–¥–µ—Ç –Ω–∞–±–æ—Ä –Ω–æ–≤—ã—Ö —É—á–µ–Ω–∏–∫–æ–≤',
  title = '–ì–æ—Ç–æ–≤—ã –Ω–∞—á–∞—Ç—å –æ–±—É—á–µ–Ω–∏–µ?',
  subtitle = '–°–≤—è–∂–∏—Ç–µ—Å—å —Å–æ –º–Ω–æ–π –¥–ª—è –∫–æ–Ω—Å—É–ª—å—Ç–∞—Ü–∏–∏ –∏ –ø—Ä–æ–±–Ω–æ–≥–æ —É—Ä–æ–∫–∞',
  buttonText = 'üóìÔ∏è –ó–∞–ø–∏—Å–∞—Ç—å—Å—è –Ω–∞ –ø—Ä–æ–±–Ω—ã–π —É—Ä–æ–∫',
