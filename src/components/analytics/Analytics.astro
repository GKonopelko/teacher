---
const GA_ID = 'G-K2H7LD1NFB';
// const GA_ID = import.meta.env.PUBLIC_GA_ID; //

const debugScript = `
  console.log('GA_ID loaded:', '${GA_ID}');
  console.log('Is production:', ${import.meta.env.PROD});
`;

const gtagScript = `
  console.log('Starting GA initialization...');
  window.dataLayer = window.dataLayer || [];
  console.log('dataLayer created:', window.dataLayer);
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());
  gtag('config', '${GA_ID}');
  console.log('Google Analytics fully initialized');
  console.log('gtag function:', typeof gtag);
`;
---

{/* Отладочная информация */}
<script is:inline set:html={debugScript} />

{/* Google Analytics */}
{
  GA_ID && (
    <>
      <script async src={`https://www.googletagmanager.com/gtag/js?id=${GA_ID}`} />
      <script is:inline set:html={gtagScript} />
    </>
  )
}
