---
const GA_ID = 'G-K2H7LD1NFB';

const gtagScript = `
  console.log('Starting GA initialization...');
  window.dataLayer = window.dataLayer || [];
  console.log('dataLayer created:', window.dataLayer);
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());
  gtag('config', '${GA_ID}');
  console.log('Google Analytics fully initialized');
  console.log('gtag function:', typeof gtag);
`;
---

{
  GA_ID && (
    <>
      <script async src={`https://www.googletagmanager.com/gtag/js?id=${GA_ID}`} />
      <script is:inline set:html={gtagScript} />
    </>
  )
}
