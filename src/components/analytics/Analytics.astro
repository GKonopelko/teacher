---
const GA_ID = 'G-K2H7LD1NFB';

const gtagScript = `
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());
  gtag('config', '${GA_ID}');

`;
---

{
  GA_ID && (
    <>
      <script is:inline async src={`https://www.googletagmanager.com/gtag/js?id=${GA_ID}`} />
      <script is:inline set:html={gtagScript} />
    </>
  )
}
