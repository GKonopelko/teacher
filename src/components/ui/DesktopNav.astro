---
import { navigationLinks } from '../../data/navigation';
---

<nav class="nav-desktop" aria-label="Основная навигация">
  <div class="nav-links">
    {
      navigationLinks.map((link) => (
        <a href={link.href} class="nav-item">
          {link.label}
        </a>
      ))
    }
  </div>
</nav>

<style>
  .nav-desktop {
    display: flex;
  }

  .nav-links {
    display: flex;
    gap: 2rem;
    align-items: center;
  }

  .nav-item {
    text-decoration: none;
    color: var(--text-secondary);
    font-weight: 500;
    font-size: 1rem;
    padding: 0.5rem 0;
    position: relative;
    transition: color 0.2s ease;
    white-space: nowrap;
  }

  .nav-item:hover {
    color: var(--text-primary);
  }

  .nav-item::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--accent-primary);
    transition: width 0.3s ease;
  }

  .nav-item:hover::after {
    width: 100%;
  }

  @media (max-width: 1024px) {
    .nav-links {
      gap: 1.5rem;
    }
  }

  @media (max-width: 768px) {
    .nav-desktop {
      display: none;
    }
  }
</style>
