---
export interface Props {
  href?: string;
  class?: string;
  variant?: 'default' | 'wide';
}

const { href, class: className = '', variant = 'default' } = Astro.props;
---

{
  href ? (
    <a href={href} class={`card ${variant === 'wide' ? 'card-wide' : ''} ${className}`}>
      <div class="card-content">
        <slot />
      </div>
    </a>
  ) : (
    <div class={`card ${variant === 'wide' ? 'card-wide' : ''} ${className}`}>
      <div class="card-content">
        <slot />
      </div>
    </div>
  )
}

<style>
  .card {
    background: var(--background-white);
    border: 1px solid var(--border-light);
    border-radius: var(--border-radius-lg);
    padding: 2rem;
    box-shadow: var(--shadow);
    transition: var(--transition);
    display: flex;
    flex-direction: column;
    height: 100%;
    text-decoration: none;
    color: inherit;
    flex: 1 1 300px;
    max-width: 400px;
  }

  .card-wide {
    flex: 1 1 100%;
    max-width: 100%;
  }

  .card:hover {
    border-color: var(--accent-soft);
    box-shadow: 0 2px 12px rgba(77, 166, 255, 0.15);
  }

  .card-content {
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  @media (max-width: 768px) {
    .card {
      padding: 1.5rem;
      max-width: 100%;
    }
  }
</style>
