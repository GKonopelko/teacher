---
import MobileMenu from './MobileMenu.astro';
import DesktopNav from './DesktopNav.astro';
import BurgerButton from './BurgerButton.astro';
import LogoLink from './LogoLink.astro';

interface Props {
  buttonId?: string;
  menuId?: string;
}

const { buttonId = 'headerBurger', menuId = 'mobileMenu' } = Astro.props;
---

<header class="header">
  <div class="header-container">
    <div class="header-left">
      <LogoLink showText={true} />
      <DesktopNav />
    </div>

    <div class="header-right">
      <BurgerButton {buttonId} {menuId} />
    </div>
  </div>
  <MobileMenu {menuId} />
</header>

<script>
  import { initMobileMenu } from '../../scripts/mobile-menu';

  document.addEventListener('DOMContentLoaded', () => {
    initMobileMenu({
      buttonId: 'headerBurger',
      menuId: 'mobileMenu',
      breakpoint: 48, // 768px Ð² rem
      onOpen: () => {
        if (typeof window !== 'undefined' && window.gtag) {
          window.gtag('event', 'menu_open', {
            event_category: 'navigation',
            event_label: 'mobile_menu',
          });
        }
      },
    });
  });
</script>

<style>
  .header {
    background: var(--background-white);
    border-bottom: 0.0625rem solid var(--border-light);
    position: sticky;
    top: 0;
    z-index: 1002;
    backdrop-filter: blur(0.625rem);
    width: 100%;
  }

  .header-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    max-width: 75rem;
    margin: 0 auto;
    padding: 0.5rem 0;
    gap: 2rem;
  }

  .header-left {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 3rem;
    flex: 1;
    min-width: 0;
  }

  .header-right {
    display: flex;
    align-items: center;
    flex-shrink: 0;
  }

  @media (max-width: 64rem) {
    .header-container {
      padding: 0;
      gap: 1rem;
    }
    .header-left {
      gap: 0rem;
    }
  }

  @media (max-width: 48rem) {
    .header-container {
      gap: 0;
    }
  }

  @media (max-width: 30rem) {
    .header-left {
      gap: 0.5rem;
    }
  }
</style>
