---
export interface Props {
  href?: string;
  class?: string;
  variant?: 'default' | 'wide' | 'accent' | 'wide-accent';
  delay?: number;
}

const { href, class: className = '', variant = 'default', delay = 0 } = Astro.props;
---

{
  href ? (
    <a
      href={href}
      class={`card
      ${variant.includes('wide') ? 'card-wide' : ''}
      ${variant.includes('accent') ? 'card-accent' : ''}
      ${className}`}
      data-animate="fade-in-up"
      data-delay={delay}
    >
      <div class="card-content">
        <slot />
      </div>
    </a>
  ) : (
    <div
      class={`card
      ${variant.includes('wide') ? 'card-wide' : ''}
      ${variant.includes('accent') ? 'card-accent' : ''}
      ${className}`}
      data-animate="fade-in-up"
      data-delay={delay}
    >
      <div class="card-content">
        <slot />
      </div>
    </div>
  )
}

<style>
  .card {
    /* существующие стили */
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.6s ease-out;
    will-change: transform, opacity;
  }

  .card[data-animate].visible {
    opacity: 1;
    transform: translateY(0);
  }
</style>
