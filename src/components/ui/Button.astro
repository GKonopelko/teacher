---
export interface Props {
  href?: string;
  variant?: 'primary' | 'button-link' | 'text-link';
  size?: 'small' | 'medium' | 'large';
  class?: string;
  target?: string;
  rel?: string;
}

const {
  href,
  variant = 'primary',
  size = 'medium',
  class: className = '',
  target,
  rel,
} = Astro.props;

const baseClass = 'btn';
const variantClass = `btn-${variant}`;
const sizeClass = size !== 'medium' ? `btn--${size}` : '';
---

{
  href ? (
    <a
      href={href}
      class={`${baseClass} ${variantClass} ${sizeClass} ${className}`.trim()}
      target={target}
      rel={rel}
    >
      <slot />
    </a>
  ) : (
    <button class={`${baseClass} ${variantClass} ${sizeClass} ${className}`.trim()}>
      <slot />
    </button>
  )
}

<style>
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border-radius: var(--border-radius-rounded);
    font-weight: 600;
    text-decoration: none;
    transition: var(--transition);
    border: 2px solid transparent;
    font-family: inherit;
    cursor: pointer;
    gap: 0.5rem;
    white-space: nowrap;
  }

  .btn-primary {
    background: transparent;
    color: var(--link-color);
    border-color: var(--accent-light);
    padding: 0.75rem 1rem;
    font-size: 0.875rem;
  }

  .btn-primary:hover {
    background: var(--hover-bg);
    color: var(--text-primary);
    box-shadow: var(--shadow-hover);
    border-color: var(--hover-bg);
  }
  .btn-button-link {
    background: transparent;
    color: var(--link-color);
    padding: 0.75rem 1rem;
    font-size: 0.875rem;
  }

  .btn-button-link:hover {
    background: var(--hover-bg);
    color: var(--text-primary);
  }

  .btn-text-link {
    background: transparent;
    color: var(--link-color);
    padding: 0.25rem 0.5rem;
    margin: -0.25rem -0.5rem;
    font-weight: normal;
    font-size: inherit;
  }

  .btn-text-link:hover {
    background: var(--hover-bg);
    color: var(--text-primary);
    text-decoration: none;
  }

  /* Размеры */
  .btn--small {
    padding: 0.5rem 1rem !important;
    font-size: 0.75rem !important;
  }

  .btn--large {
    padding: 1rem 2rem !important;
    font-size: 1rem !important;
  }

  .btn:disabled {
    opacity: 0.6;
    cursor: not-allowed;
    transform: none !important;
    box-shadow: none !important;
  }
</style>
