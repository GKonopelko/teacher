---
import { navigationLinks } from '../../data/navigation';
interface Props {
  menuId: string;
}

const { menuId } = Astro.props;
---

<nav class="nav-mobile" id={menuId} aria-label="Мобильная навигация" aria-hidden="true">
  <div class="mobile-links">
    {
      navigationLinks.map((link) => (
        <a href={link.href} class="nav-item radius-link">
          {link.label}
        </a>
      ))
    }

    <a href="/contact/" class="nav-item radius-link nav-item--cta">Записаться на урок</a>
  </div>
</nav>

<style>
  .nav-mobile {
    position: fixed;
    top: 0;
    right: 0;
    width: 100vw;
    height: 100vh;
    background: var(--background-white);
    z-index: 1001;
    transform: translateX(100%);
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    overflow-y: auto;
    -webkit-overflow-scrolling: touch;
  }

  .nav-mobile.active {
    transform: translateX(0);
  }

  .mobile-links {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin: 0 auto;
    padding-top: 5rem;
    max-width: 17.5rem;
    opacity: 0;
    transform: translateY(10px);
    transition: all 0.3s ease 0.2s;
  }

  .nav-mobile.active .mobile-links {
    opacity: 1;
    transform: translateY(0);
  }

  .mobile-links .nav-item {
    padding: 1rem 0;
    font-size: 1.1rem;
    text-decoration: none;
    transition: color 0.2s ease;
    text-align: center;
  }

  .nav-item--cta {
    border: 1px solid var(--hover-bg);
    font-weight: 600;
  }

  @media (max-width: 48rem) {
    .nav-mobile {
      display: block;
    }
  }

  @media (max-width: 30rem) {
    .nav-mobile {
      padding: 1.5rem;
    }

    .mobile-links {
      padding-top: 4.375rem;
      max-width: 16.25rem;
    }
  }

  @media (max-width: 22.5rem) {
    .nav-mobile {
      padding: 1rem;
    }

    .mobile-links {
      max-width: 15rem;
      padding-top: 3.75rem;
    }
  }
</style>
