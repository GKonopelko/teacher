---
import { navigationLinks } from '../../data/navigation';
import Button from './Button.astro';

interface Props {
  menuId: string;
}

const { menuId } = Astro.props;
---

<nav class="nav-mobile" id={menuId} aria-label="Мобильная навигация" aria-hidden="true">
  <div class="mobile-links">
    {
      navigationLinks.map((link) => (
        <Button href={link.href} variant="button-link" size="large" class="nav-item">
          {link.label}
        </Button>
      ))
    }

    <Button href="/contact/" variant="primary" size="large" class="nav-item--cta">
      Записаться на урок
    </Button>
  </div>
</nav>

<style>
  .nav-mobile {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 0;
    background: var(--background-white);
    z-index: 1001;
    transform: translateX(100%);
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    overflow-y: auto;
    -webkit-overflow-scrolling: touch;
    visibility: hidden;
    pointer-events: none;
  }

  .nav-mobile.active {
    height: 100vh;
    transform: translateX(0);
    display: block;
    visibility: visible;
    pointer-events: auto;
  }

  .mobile-links {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin: 0 auto;
    padding-top: 5rem;
    max-width: 17.5rem;
    min-height: calc(100vh - 2rem);
    opacity: 0;
    transform: translateY(10px);
    transition: all 0.3s ease 0.2s;
  }

  .nav-mobile.active .mobile-links {
    opacity: 1;
    transform: translateY(0);
  }

  .mobile-links .nav-item {
    text-align: center;
  }

  .nav-item--cta {
    margin-top: 1rem;
  }

  @media (max-width: 30rem) {
    .nav-mobile {
      padding: 0 1.5rem;
    }

    .mobile-links {
      padding-top: 4.375rem;
      max-width: 16.25rem;
    }
  }

  @media (max-width: 22.5rem) {
    .nav-mobile {
      padding: 0 1rem;
    }

    .mobile-links {
      max-width: 15rem;
      padding-top: 3.75rem;
    }
  }
</style>
