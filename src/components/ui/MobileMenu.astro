---
import { navigationLinks } from '../../data/navigation';
interface Props {
  menuId: string;
}

const { menuId } = Astro.props;
---

<nav class="nav-mobile" id={menuId} aria-label="Мобильная навигация" aria-hidden="true">
  <div class="mobile-links">
    {
      navigationLinks.map((link) => (
        <a href={link.href} class="nav-item radius-link">
          {link.label}
        </a>
      ))
    }

    <a href="/contact/" class="nav-item radius-link nav-item--cta">Записаться на урок</a>
  </div>
</nav>

<style>
  .nav-mobile {
    position: fixed;
    top: 0;
    right: 0;
    width: 100vw;
    height: 100vh;
    padding: 2rem;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
    overflow: hidden;
    z-index: 1;
    display: none;
    transform: scale(0);
    transform-origin: top right;
    border-bottom-left-radius: 50rem;
    box-shadow: -0.25rem 0 1.25rem rgba(0, 0, 0, 0.1);
  }

  .nav-mobile.active {
    background: var(--background-white);
    opacity: 1;
    visibility: visible;
    display: block;
    width: 100%;
    height: 100vh;
    border-bottom-left-radius: 0rem;
    transform: scale(1);
    transition: all 0.4s;
  }

  .mobile-links {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin: 0 auto;
    padding-top: 5rem;
    max-width: 17.5rem;
    opacity: 0;
    transform: scale(0.7);
    transition: all 0.3s ease 0.2s;
  }

  .nav-mobile.active .mobile-links {
    opacity: 1;
    transform: scale(1);
  }

  .mobile-links .nav-item {
    padding: 1rem 0;
    font-size: 1.1rem;
    text-decoration: none;
    transition: color 0.2s ease;
    text-align: center;
  }

  .nav-item--cta {
    border: 1px solid var(--hover-bg);
    font-weight: 600;
  }

  @media (max-width: 48rem) {
    .nav-mobile {
      display: block;
    }
  }

  @media (max-width: 30rem) {
    .nav-mobile {
      padding: 1.5rem;
    }

    .mobile-links {
      padding-top: 4.375rem;
      max-width: 16.25rem;
    }
  }

  @media (max-width: 22.5rem) {
    .nav-mobile {
      padding: 1rem;
    }

    .mobile-links {
      max-width: 15rem;
      padding-top: 3.75rem;
    }
  }
</style>
