---
import { navigationLinks } from '../../data/navigation';
interface Props {
  menuId: string;
}

const { menuId } = Astro.props;
---

<nav class="nav-mobile" id={menuId} aria-label="Мобильная навигация" aria-hidden="true">
  <div class="mobile-links">
    {
      navigationLinks.map((link) => (
        <a href={link.href} class="nav-item">
          {link.label}
        </a>
      ))
    }

    <a href="/contact/" class="nav-item nav-item--cta">Записаться на урок</a>
  </div>
</nav>

<style>
  .nav-mobile {
    position: fixed;
    top: 0;
    right: 0;
    width: 100%;
    height: 100vh;
    background: var(--background-white);
    box-shadow: -4px 0 20px rgba(0, 0, 0, 0.1);
    padding: 2rem;
    transform: translateX(100%);
    opacity: 1;
    visibility: visible;
    transition: transform 0.3s ease;
    overflow-y: auto;
    z-index: 1001;
  }

  .nav-mobile.active {
    transform: translateX(0);
  }

  .mobile-links {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    max-width: 1200px;
    margin: 0 auto;
    padding-top: 80px;
  }

  .mobile-links .nav-item {
    padding: 1rem 0;
    font-size: 1.1rem;
    border-bottom: 1px solid var(--border-light);
    text-decoration: none;
    color: var(--text-secondary);
    transition: color 0.2s ease;
    text-align: center;
  }

  .mobile-links .nav-item:hover {
    color: var(--text-primary);
  }

  .nav-item--cta {
    background: var(--accent-primary);
    color: white !important;
    border-radius: var(--border-radius);
    margin-top: 1rem;
    border: none !important;
    font-weight: 600;
  }

  @media (max-width: 480px) {
    .nav-mobile {
      padding: 1.5rem;
    }

    .mobile-links {
      padding-top: 70px;
    }
  }
</style>
