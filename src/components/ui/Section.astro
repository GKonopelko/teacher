---
export interface Props {
  class?: string;
  background?: 'white' | 'light';
  variant?: 'default' | 'text';
}

const { class: className = '', background = 'white', variant = 'default' } = Astro.props;
---

<section
  class={`
    section
    section--${background}
    section--${variant}
    ${className}
  `}
>
  <slot />
</section>

<style>
  .section {
    width: 100%;
    padding: 0 0.5rem;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  /* Фоны */
  .section--white {
    background: var(--background-white);
  }

  .section--light {
    background: var(--background-light);
  }

  .section--text {
    padding: 2rem 1rem;
    max-width: 800px;
  }

  .section--text h1 {
    text-align: center;
    margin-bottom: 1rem;
  }

  .section--text h2 {
    margin: 2rem 0 1rem 0;
    color: var(--text-primary);
  }

  .section--text h3 {
    margin: 1.5rem 0 0.75rem 0;
    color: var(--text-primary);
  }

  .section--text p {
    margin-bottom: 1rem;
    line-height: 1.6;
  }

  .section--text ul {
    margin: 1rem 0;
    padding-left: 1.5rem;
  }

  .section--text li {
    margin-bottom: 0.5rem;
    line-height: 1.6;
  }

  .section--text strong {
    color: var(--text-primary);
  }

  @media (max-width: 768px) {
    .section--text {
      padding: 1.5rem 1rem;
    }
  }
</style>
