---
import { ICONS } from '../../data/icons';

export interface Props {
  name: keyof typeof ICONS;
  size?: 'sm' | 'md' | 'lg';
  class?: string;
}

const { name, size = 'md', class: className = '' } = Astro.props;
---

<span
  class={`icon icon-${name} icon-size-${size} ${className}`}
  set:html={ICONS[name]}
  role="img"
  aria-label={name}
/>

<style>
  .icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    /* color: var(--hover-bg); */
  }

  .icon-size-sm {
    width: 1.5rem; /* 24px */
    height: 1.5rem;
  }

  .icon-size-md {
    width: 2rem;
    height: 2rem;
  }

  .icon-size-lg {
    width: 2.5rem; /* 40px */
    height: 2.5rem;
  }

  .icon svg {
    width: 100%;
    height: 100%;
  }

  .icon:hover {
    transform: scale(1.1);
    transition: transform 0.2s ease;
  }
</style>
