---
interface Props {
  buttonId: string;
  menuId: string;
}

const { buttonId, menuId } = Astro.props;
---

<button
  class="burger-menu"
  id={buttonId}
  type="button"
  aria-controls={menuId}
  aria-expanded="false"
  aria-label="Открыть меню"
>
  <span></span>
  <span></span>
  <span></span>
</button>

<style>
  .burger-menu {
    display: none;
    flex-direction: column;
    justify-content: space-between;
    width: 24px;
    height: 18px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0;
    position: relative;
    min-width: 24px;
    min-height: 18px;
  }

  .burger-menu span {
    display: block;
    height: 2px;
    width: 100%;
    background-color: var(--text-primary);
    transition: all 0.3s ease;
    transform-origin: center;
  }

  .burger-menu.active span:nth-child(1) {
    transform: rotate(45deg) translate(6px, 6px);
  }

  .burger-menu.active span:nth-child(2) {
    opacity: 0;
    transform: scale(0);
  }

  .burger-menu.active span:nth-child(3) {
    transform: rotate(-45deg) translate(6px, -6px);
  }

  @media (max-width: 768px) {
    .burger-menu {
      display: flex;
    }
  }
</style>
